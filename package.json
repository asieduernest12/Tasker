{
	"dependencies": {
		"mongoose": "^7.6.3"
	},
	"scripts": {
		"postinstall": "npm --prefix frontend install && npm --prefix api install",
		"dev:frontend": "npm --prefix frontend run start -- --max-old-space-size=128",
		"dev:api": "npm --prefix api run dev -- --max-old-space-size=128",
		"dev": "npx concurrently \"npm run dev:frontend\"  \"npm run dev:api\"",
		"dev:docker": "docker compose up",
		"build:frontend": "npm --prefix frontend run build -- --max-old-space-size=128",
		"build": "npm run build:frontend",
		"start": "npm --prefix api start -- --max-old-space-size=128"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"nodemon": "^3.0.1"
	}
}
